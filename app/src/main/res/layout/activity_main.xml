<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timeText"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:gravity="center|center_vertical"
        android:text="Time : 10"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/scoreText"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Grid" />

    <GridLayout
        android:id="@+id/Grid"
        android:layout_width="374dp"
        android:layout_height="520dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="115dp"
            android:layout_height="130dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="updateScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="115dp"
            android:layout_height="130dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="updateScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="115dp"
            android:layout_height="130dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:onClick="updateScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="115dp"
            android:layout_height="130dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="updateScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="115dp"
            android:layout_height="130dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="updateScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="115dp"
            android:layout_height="130dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:onClick="updateScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="115dp"
            android:layout_height="130dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="updateScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="115dp"
            android:layout_height="130dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="updateScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="115dp"
            android:layout_height="130dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:onClick="updateScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="115dp"
            android:layout_height="130dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="updateScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="115dp"
            android:layout_height="130dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="updateScore"
            app:srcCompat="@drawable/kennymccormick" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="115dp"
            android:layout_height="130dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:onClick="updateScore"
            app:srcCompat="@drawable/kennymccormick" />


    </GridLayout>

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:gravity="center|center_vertical"
        android:text="Score : 0"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/timeText"
        app:layout_constraintTop_toBottomOf="@id/Grid" />

    <TextView
        android:id="@+id/descText"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center|center_vertical"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Touch The Kenny to Increase Your Score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewRestart"
        android:layout_width="82dp"
        android:layout_height="66dp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="638dp"
        app:srcCompat="@drawable/ic_refresh_black_24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>